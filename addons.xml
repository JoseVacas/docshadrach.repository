<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="repository.docshadrach" name="Doc Shadrach's Add-ons" version="1.0" provider-name="Doc Shadrach">
	<extension point="xbmc.addon.repository" name="Doc Shadrach's Add-ons Repo 1.0">
		<info compressed="false">http://github.com/XBMCSpot/docshadrach.repository/raw/master/addons.xml</info>
		<checksum>http://github.com/XBMCSpot/docshadrach.repository/raw/master/addons.xml.md5</checksum>
		<datadir zip="true">http://github.com/XBMCSpot/docshadrach.repository/raw/master/zips</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Instala add-ons desde el repositorio de Doc Shadrach</summary>
		<description>Visita el spot B75OYRJ de la app Spotbros para enterarte de las novedades.</description>
		<platform>all</platform>
	</extension>
</addon>

<addon id="plugin.video.ft" name="FT" version="1.0" provider-name="Doc Shadrach">
	<requires>
		<import addon="xbmc.python" version="2.1.0"/>
	</requires>
	<extension point="xbmc.python.pluginsource" library="default.py">
		<provides>video</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="es">FT</summary>
		<description>Buscador de videos a traves de servidores.</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
